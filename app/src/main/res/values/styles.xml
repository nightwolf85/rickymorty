<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Rickymorty" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ricky_neon</item>
        <item name="colorPrimaryVariant">@color/ricky_neon</item>
        <item name="colorOnPrimary">@color/ricky_fondo</item>
        <item name="android:windowBackground">@color/ricky_fondo</item>
        <item name="colorSurface">@color/ricky_fondo</item>
        <item name="android:textColor">@color/texto_primario</item>
        <item name="android:textColorPrimary">@color/texto_primario</item>
    </style>

    <style name="episodios" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="TituloDetalles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="NombrePersonajes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>